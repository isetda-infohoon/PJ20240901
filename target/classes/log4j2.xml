<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- 콘솔에 로그를 출력하는 Appender -->
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%-5level] %logger{36} - %msg%n"/>
        </Console>

        <!-- 파일에 로그를 저장하는 Appender -->
        <RollingFile name="FILE"
                     fileName="C:/Users/isetda/OneDrive/바탕 화면/LOG/${date:yyyy}/${date:MM}/IDPEngine.log"
                     filePattern="C:/Users/isetda/OneDrive/바탕 화면/LOG/${date:yyyy}/${date:MM}/IDPEngine_%d{yyyy-MM-dd}.%i.log.gz">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5level] %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- 최상위 로그 설정 -->
        <Root level="debug">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="FILE"/> <!-- 파일로 로그 저장 -->
        </Root>
    </Loggers>
</Configuration>
